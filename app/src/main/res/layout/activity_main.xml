<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.myappportfolio.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textSize="20sp"
        android:textColor="#607D8B"
        android:text="My Nano degree Apps!"
        android:layout_gravity="center_horizontal"/>

    <Button
        android:id="@+id/btn_project_one"
        style="@style/buttonStyle"
        android:background="#AAB2EBF2"
        android:text="Popular Movies"
        />

    <Button
        android:id="@+id/btn_project_two"
        style="@style/buttonStyle"
        android:background="#AA0091EA"
        android:text="Stock Hawk"
        />

    <Button
        android:id="@+id/btn_project_three"
        style="@style/buttonStyle"
        android:background="#AA689F38"
        android:text="Build it Bigger"
        />

    <Button
        android:id="@+id/btn_project_four"
        style="@style/buttonStyle"
        android:background="#AA1B5E20"
        android:text="Make Your App Material"
        />

    <Button
        android:id="@+id/btn_project_five"
        style="@style/buttonStyle"
        android:background="#AAFF8F00"
        android:text="Go Ubiquitous"
        />

    <Button
        android:id="@+id/btn_project_six"
        style="@style/buttonStyle"
        android:background="#AABF360C"
        android:text="Capstone"
        />


</LinearLayout>
